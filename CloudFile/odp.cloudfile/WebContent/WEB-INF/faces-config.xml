<?xml version="1.0" encoding="UTF-8"?>
<faces-config>

  <managed-bean id="bcs">
    <managed-bean-name>bcs</managed-bean-name>
    <managed-bean-class>com.developi.cf.xsp.BoxService</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>

  <!--
		Token store Memory implementation
	-->
  <managed-bean>
    <managed-bean-name>CredStore</managed-bean-name>
    <managed-bean-class>com.developi.sbt.extensions.MemoryStore</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
  <!--  Basecamp OAuth 2.0 -->
  <managed-bean>
    <managed-bean-name>box
		</managed-bean-name>
    <managed-bean-class>com.developi.sbt.extensions.BoxEndpoint</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    <!-- Endpoint URL -->
    <managed-property>
      <property-name>url</property-name>
      <value>https://api.box.com/2.0</value>
    </managed-property>
    <managed-property>
      <property-name>serviceName</property-name>
      <value>box</value>
    </managed-property>
    <!-- OAuth parameters -->
    <managed-property>
      <property-name>appId</property-name>
      <value>cloudfile</value>
    </managed-property>
    <managed-property>
      <property-name>consumerSecret</property-name>
      <value>#{bcs.consumerSecret}</value>
    </managed-property>
    <managed-property>
      <property-name>consumerKey</property-name>
      <value>#{bcs.consumerKey}</value>
    </managed-property>
    <managed-property>
      <property-name>authorizationURL</property-name>
      <value>https://app.box.com/api/oauth2/authorize</value>
    </managed-property>
    <managed-property>
      <property-name>accessTokenURL</property-name>
      <value>https://app.box.com/api/oauth2/token</value>
    </managed-property>
    <!-- Trust the connection -->
    <managed-property>
      <property-name>forceTrustSSLCertificate
			</property-name>
      <value>true</value>
    </managed-property>
    <!-- Access to the credential store -->
    <managed-property>
      <property-name>credentialStore</property-name>
      <value>CredStore</value>
    </managed-property>
  </managed-bean>

  <managed-bean id="dBar">
    <managed-bean-name>dBar</managed-bean-name>
    <managed-bean-class>eu.linqed.debugtoolbar.DebugToolbar
		</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <!--AUTOGEN-START-BUILDER: Automatically generated by IBM Domino Designer. Do not modify.-->
  <!--AUTOGEN-END-BUILDER: End of automatically generated section-->
</faces-config>
